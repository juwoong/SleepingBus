<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.BookMarkFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="#38a6be">

        <ImageView
            android:id="@+id/boardingImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/boardingpass" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="18dp"
            android:gravity="bottom"
            android:textStyle="bold"
            android:text="즐겨찾기를 등록하세요!"
            android:textColor="#000"
            android:textSize="32.5sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center_horizontal|top"
            android:text="매일 다니는 피곤한 출근길, 등교길\n즐겨찾기로 등록해 두시면\n더욱 편하게 사용할 수 있습니다."
            android:textColor="#888"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>
